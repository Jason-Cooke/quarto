#!/usr/bin/env ruby

require "optparse"
$:.unshift(File.expand_path("../../lib", __FILE__))
require "golden_child"

command = ARGV.shift

options = OptionParser.new do |o|
  o.banner = "Usage: #{o.program_name} COMMAND [options]\n\n" +
      "Commands: accept, remove/rm/delete"
end

begin
  case command
  when "accept"
    options.banner = "Usage: #{options.program_name} accept PATH_OR_SHORTCODE..."
    options.parse!
    filenames = ARGV.to_a
    if filenames.empty?
      puts options
      abort
    end
    GoldenChild.accept(*filenames)
  when "remove", "rm", "delete"
    options.banner = "Usage: #{options.program_name} rm PATH_OR_SHORTCODE"
    options.parse!
    filenames = ARGV.to_a
    if filenames.empty?
      puts options
      abort
    end
    GoldenChild.remove(*filenames)
  else
    puts options
    exit
  end
rescue GoldenChild::UserError => error
  abort error.message
end
